{
  "name": "next-tailwind-express-ts",
  "version": "1.0.0",
  "description": "A full fledged solution to host api and next.js in a single project.",
  "main": "server/index.ts",
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json server/index.ts",
    "build:server": "tsc --project tsconfig.server.json",
    "build:next": "next build",
    "build": "npm run build:next && npm run build:server",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "keywords": [
    "next.js",
    "express",
    "full-stack",
    "tailwindCSS"
  ],
  "author": "Deepanshu Kushwaha",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "next": "^12.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.3.11",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
